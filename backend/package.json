{
  "name": "stock-analyst-backend",
  "version": "1.0.0",
  "description": "Flask backend API with AI chatbot",
  "main": "run_server.py",
  "scripts": {
    "start": "npm run production",
    "production": "concurrently \"npm run server\" \"npm run chatbot\"",
    "dev": "concurrently \"npm run server\" \"npm run chatbot\"",
    "server": "python3 run_server.py",
    "chatbot": "PYTHONPATH=. python3 chatbot/chat_response_router.py",
    "install-deps": "pip install -r requirements.txt",
    "setup": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "test": "python3 -m pytest",
    "lint": "flake8 .",
    "format": "black .",
    "clean": "find . -name '__pycache__' -exec rm -rf {} + && find . -name '*.pyc' -delete && rm -rf venv",
    "health": "curl http://localhost:5003/api/health",
    "chatbot-health": "curl http://localhost:5002/api/health"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "config": {
    "mainPort": 5003,
    "chatbotPort": 5002
  }
}
